import java.util.Scanner;

public class PrintWeek{
    public static void main(String[] args){
        System.out.println("input:");
        Scanner i = new Scanner(System.in);
        int x = i.nextInt();
        System.out.println("Output:");
        String a = new String();
        switch(x){
            case 1:
                a = "Monday";
                break;
            case 2:
                a = "Tuesday";
                break;
            case 3:
                a = "Wednesday";
                break;
            case 4:
                a = "Thursday";
                break;
             case 5:
                a = "Friday";
                break;
             case 6:
                a = "Saturday ";
                break;
             case 7:
                a = "Sunday";
                break;
        }
        System.out.println("     Today is "+a);

    }
}
